<% provide(:title, "Your Ticket Details") %>

<div class="menupopup hidden">
<%= render "shared/navbar" %>

  <div class="menucenter">
    <div class="menucontent">
      <% unless current_user %>
        <div class="menuoption">
          <h1><%= link_to "Sign In", new_user_session_path %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "Sign Up", new_user_registration_path %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "About Us", "#" %></h1>
        </div>
      <% else %>
        <div class="menuoption">
          <h1><%= link_to "Dashboard", dashboard_path %></h1>
        </div>
        <% if current_user.is_mechanic == true  %>
        <div class="menuoption">
          <h1><%= link_to "Tickets", tickets_path %></h1>
        </div>
        <% else %>
        <div class="menuoption">
          <h1><%= link_to "New Ticket", new_ticket_path %></h1>
        </div>
        <% end %>
        <div class="menuoption">
          <h1><%= link_to "About Us", "#" %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></h1>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div id="restofpage">
    <%= render 'shared/flashes' %>
    <%= render 'shared/navbar' %>

    <div class="dash-background">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
            <div class="ticketdetailscard">
              <h2>Your Ticket Details</h2>

              <p><%= @ticket.id %></p>


              <h3>Tags</h3>
    <% if @ticket.tune_up == true %>
      <div class="filter">Tune Up</div>
    <% end %>
    <% if @ticket.brakes == true %>
      <div class="filter">Brakes</div>
    <% end %>
    <% if @ticket.flat_tire == true %>
      <div class="filter">Flat tire</div>
    <% end %>
    <% if @ticket.chain == true %>
      <div class="filter">Chain</div>
    <% end %>
    <% if @ticket.gears == true %>
      <div class="filter">Gears</div>
    <% end %>
    <% if @ticket.wheels == true %>
      <div class="filter">Wheels</div>
    <% end %>
    <% if @ticket.frame == true %>
      <div class="filter">Frame</div>
    <% end %>



    <% if @ticket.photo_1.file %>
    <%= cl_image_tag @ticket.photo_1 %>
    <% end %>

    <h3>Description</h3>
    <p><%= @ticket.address %></p>
    <p><%= @ticket.description %></p>

    <% if policy(@ticket).edit? %>
        <%= link_to edit_ticket_path(@ticket) do%>
          <div class="editbutton">EDIT</div>
        <% end %>
        <div class="markbutton">MARK AS COMPLETE</div>
        <%= link_to "/tickets/#{@ticket.id}", method: "delete" do%>
          <div class="deletebutton">DELETE</div>
        <% end %>

    <% elsif current_user.is_mechanic==true %>

        <%= simple_form_for ([@ticket, @response]) do |f| %>
          <%= f.input :content %>
          <%= f.input :price %>
          <%= f.input :contact %>
          <%= f.submit %>
        <% end %>

    <% end %>

      <div class="back1">
        <%= link_to ticket_path(@ticket) do%><i class="fas fa-long-arrow-alt-left"></i><strong>back</strong><% end %>
      </div>
            </div>


          </div>
        </div>
      </div>
    </div>

</div>

