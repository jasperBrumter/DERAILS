<% provide(:title, "Dashboard") %>

<div class="menupopup hidden">
<%= render "shared/navbar" %>

  <div class="menucenter">
    <div class="menucontent">
      <% unless current_user %>
        <div class="menuoption">
          <h1><%= link_to "Sign In", new_user_session_path %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "Sign Up", new_user_registration_path %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "About Us", "#" %></h1>
        </div>
      <% else %>
        <div class="menuoption">
          <h1><%= link_to "Dashboard", dashboard_path %></h1>
        </div>
        <% if current_user.is_mechanic == true  %>
        <div class="menuoption">
          <h1><%= link_to "Tickets", tickets_path %></h1>
        </div>
        <% else %>
        <div class="menuoption">
          <h1><%= link_to "New Ticket", new_ticket_path %></h1>
        </div>
        <% end %>
        <div class="menuoption">
          <h1><%= link_to "About Us", "#" %></h1>
        </div>
        <div class="menuoption">
          <h1><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></h1>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div id="restofpage">
  <%= render 'shared/flashes' %>
  <%= render 'shared/navbar' %>

  <div class="dash-background">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-xs-offset-0 col-md-8 col-md-offset-2">
          <div class="dash-container">


            <h1><%= @user.first_name %> <%= @user.last_name %></h1>
            <h3><%= @user.email %></h3>
            <p>Member Since <%= @user.created_at.strftime("%F") %> </p>

            <%= link_to user_registration_path(@user) do %>
                <div class="editbutton">EDIT PROFILE</div>
            <% end %>

            <%= link_to new_ticket_path do %>
              <div class="markbutton">CREATE NEW TICKET</div>
            <% end %>

            <% if @user.is_mechanic %>
            <%= link_to new_ticket_path do %>
              <div class="markbutton">FIND NEW BIKE TO FIX</div>
            <% end %>
            <% end %>


            <% if @user.is_mechanic %>
              <h2>Tickets You Responded To</h2>
                <% @user.responses.each do |response|%>
                <div class="ticketList">
                  <%= "TICKET # #{response.ticket_id}" %>
                </div>
                <% end %>
            <% end %>


            <h2>Your Tickets</h2>
            <% @user.tickets.each do |ticket| %>
              <%= link_to ticket_path(ticket) do %>
                <div class="ticketList">
                  <%= "TICKET # #{ticket.id}" %>
                </div>
              <% end %>
            <% end %>

            <div class="back1">
                <%= link_to dashboard_path do%><i class="fas fa-long-arrow-alt-left"></i><strong>back</strong><% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>




