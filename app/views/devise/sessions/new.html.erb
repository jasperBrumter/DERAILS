<% provide(:title, "Sign In") %>



<div id="restofpage">
    <%= render 'shared/flashes' %>
    <%= render 'shared/navbar' %>
  <div id="beige-bg"></div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
          <div id="title">
            <h2 id="title_top">Log in</h2>
            <center>
              <%= link_to "/users/auth/facebook" do%>
                <div class="fb-btn">
                  <h6>Log in with Facebook</h6>
                </div>
              <% end %>
            </center>

            <div class="forms-all">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "new-btn" %>
                </div>
              <% end %>
            <div class="login-style-space">
              <a href="/users/sign_up">Sign up</a><br>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll(".navbar-derails")[1].style.background= "rgb(61,111,75)";
  document.querySelectorAll(".navbar-derails")[1].style.borderBottom="1px solid rgb(141,205,160)";

</script>




